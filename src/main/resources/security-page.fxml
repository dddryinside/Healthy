<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>

<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml" prefWidth="900" prefHeight="600"
      fx:controller="com.dddryinside.controllers.SecurityController" stylesheets="main.css">

    <VBox alignment="CENTER" spacing="10">
        <Label text="Healthy" styleClass="bold-text" />
        <HBox alignment="CENTER" spacing="10">
            <PasswordField minWidth="300" fx:id="passwordField" onKeyPressed="#handleKeyPressed"/>
            <Button onAction="#enter" text="Войти" />
        </HBox>
        <Hyperlink text="Создать профиль" onAction="#loadAddNewPatientPage"/>

        <padding>
            <Insets bottom="50"/>
        </padding>
    </VBox>
</VBox>